{
  "name": "git-branch-trimmer",
  "version": "1.1.3",
  "private": false,
  "type": "module",
  "description": "CLI tool to detect and remove stale Git branches",
  "author": "Charles Swierczek <charles@forkflow.io>",
  "homepage": "https://github.com/karolsw3/git-branch-trimmer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "git-branch-trimmer": "./dist/index.js"
  },
  "packageManager": "pnpm@9.15.6",
  "engineStrict": true,
  "engines": {
    "node": "^20",
    "pnpm": "~9.15.6"
  },
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "start": "node dist/index.js",
    "clean": "rimraf dist temp .eslintcache",
    "clean:all": "pnpm clean && rimraf node_modules",
    "format": "prettier . --write --ignore-unknown",
    "lint": "eslint . --max-warnings 0 && prettier . --check",
    "prepare": "husky"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "28.0.3",
    "@rollup/plugin-json": "6.1.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/types": "^19.5.0",
    "@eslint/js": "^9.20.0",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-typescript": "12.1.2",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.13.4",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import-x": "^4.6.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "rimraf": "^6.0.1",
    "rollup": "4.37.0",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.5.0"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,jsx,ts,cts,mts,tsx,vue}": [
      "eslint --fix"
    ],
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
